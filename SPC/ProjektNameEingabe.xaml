<Page x:Class="SPC.ProjektNameEingabe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPC"
        mc:Ignorable="d"
        Title="Projekt erstellen" Height="Auto" Width="Auto">
    <Grid>
        <Grid ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
           
            <TextBlock Text="Projektname eingeben" FontSize="24" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Bottom" ></TextBlock>
            <TextBox x:Name="projektNameTextFeld" Grid.Row="1" Text="Hier eingeben!" FontSize="18" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" Width="422" />
            <Button x:Name="zurückButton" Grid.Row="1" Content="Zurück" Width="94" Height="33" VerticalAlignment="Center" HorizontalAlignment="Left" Click="ZurückButton_Click"></Button>
            <Button x:Name="weiterButton" Grid.Row="1" Content="Weiter" Width="94" Height="33" VerticalAlignment="Center" HorizontalAlignment="Right" Click="WeiterButton_Click"></Button>
        </Grid>
    </Grid>
</Page>
