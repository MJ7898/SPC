<Page x:Class="SPC.SPCStartMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SPC"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="500"
      Title="SPC - StartMenu">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1" ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition>
                </RowDefinition>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="Erstellen" FontSize="24" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" />
            <Button Width="100" Height="50">Create</Button>
            <TextBlock Grid.Row="1" Text="Vorhandene Datei suchen" FontSize="24" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" />
            <Button Grid.Row="1" Width="100" Height="50">Search</Button>
        </Grid>
        <TextBlock Text="Dateien" FontSize="24" TextAlignment="Center" HorizontalAlignment="Center" />
    </Grid>
</Page>
